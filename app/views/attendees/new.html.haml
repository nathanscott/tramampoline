<% semantic_form_for @attendee do |f| %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email, :label => 'Email Address', :hint => "We will just be emailing you about this event - nothing else, and definitely no spam." %>
    <%= f.input :phone, :label => 'Phone Number', :hint => "This is just in case we need to get in touch with you - but you don't have to fill this in." %>
    <%- unless @attendee.invited? -%>
      <%= f.input :invite_email, :label => 'Invitation Email Address', :hint => "You can invite someone who hasn't been to Trampoline before. If you know right now who they are, enter their email address here. If not, we'll give you a link later for the same purpose." %>
    <%- end -%>
    <%= f.input :referral_code, :as => :hidden %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Register' %>
  <% end %>
<% end %>
