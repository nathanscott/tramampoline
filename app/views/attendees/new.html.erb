<% semantic_form_for @attendee do |f| %>
  <% f.inputs do %>
    <%= f.input :name %>
    <%= f.input :email, :label => 'Email Address' %>
    <%- unless @attendee.invited? -%>
      <%= f.input :invite_email, :label => 'Invitation Email Address' %>
    <%- end -%>
    <%= f.input :referral_code, :as => :hidden %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Register' %>
  <% end %>
<% end %>
